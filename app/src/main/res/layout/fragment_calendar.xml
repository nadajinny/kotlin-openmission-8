<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCalendarHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/calendar_header_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/calendar_text_primary" />

        <TextView
            android:id="@+id/textCalendarSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/calendar_text_muted"
            android:textSize="16sp"
            tools:text="5.12. ì¼" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:theme="@style/CalenderViewCustom"
            android:minHeight="320dp"
            app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
            app:mcv_firstDayOfWeek="sunday"
            app:mcv_leftArrow="@drawable/ic_calendar_arrow_left"
            app:mcv_rightArrow="@drawable/ic_calendar_arrow_right"
            app:mcv_selectionMode="single"
            app:mcv_showOtherDates="all"
            app:mcv_weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            tools:mcv_currentDate="2024-05-20" />

        <TextView
            android:id="@+id/textCalendarScheduleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/calendar_schedule_label"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/calendar_text_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCalendarSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_calendar_schedule" />

        <TextView
            android:id="@+id/textCalendarEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:paddingVertical="24dp"
            android:text="@string/calendar_empty_state"
            android:textColor="@color/calendar_text_muted"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
