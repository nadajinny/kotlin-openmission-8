<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAddEditSubTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_dialog_round"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/title_edit_sub_task"
            android:textAppearance="@style/TextAppearance.Tagmoa.Headline" />

        <EditText
            android:id="@+id/editSubTaskContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:hint="@string/hint_subtask_content"
            android:inputType="textCapSentences" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_main_task"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <Spinner
            android:id="@+id/spinnerMainTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_period"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_no_date"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskDateRange"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_date_range"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_start_time"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_time_placeholder"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskStartTime"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_time"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_end_time"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_time_placeholder"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskEndTime"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_time"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_subtask_alarm"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSubTaskAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSubTaskAlarmOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_alarm_offset"
                android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

            <Spinner
                android:id="@+id/spinnerSubTaskAlarmOffset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/label_subtask_alarm_hint"
                android:textAppearance="@style/TextAppearance.Tagmoa.Caption" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPriorityLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_priority"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <GridLayout
            android:id="@+id/gridPriorityButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowOrderPreserved="false">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriorityDefault"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/priority_chip_default"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp">

                    <TextView
                        android:id="@+id/textPriorityDefaultTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_default"
                        android:textAppearance="@style/TextAppearance.Tagmoa.Body"
                        android:textColor="@color/priority_chip_text"
                        android:fontFamily="@font/paperlogy_4regular"
                        app:fontFamily="@font/paperlogy_4regular" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriorityImportant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/priority_chip_default"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp">

                    <TextView
                        android:id="@+id/textPriorityImportantTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_important"
                        android:textAppearance="@style/TextAppearance.Tagmoa.Body"
                        android:textColor="@color/priority_chip_text"
                        android:fontFamily="@font/paperlogy_4regular"
                        app:fontFamily="@font/paperlogy_4regular" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriorityUrgent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/priority_chip_default"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp">

                    <TextView
                        android:id="@+id/textPriorityUrgentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_urgent"
                        android:textAppearance="@style/TextAppearance.Tagmoa.Body"
                        android:textColor="@color/priority_chip_text"
                        android:fontFamily="@font/paperlogy_4regular"
                        app:fontFamily="@font/paperlogy_4regular" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPriorityMostImportant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/priority_chip_default"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="18dp">

                    <TextView
                        android:id="@+id/textPriorityMostImportantTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/priority_most_important"
                        android:textAppearance="@style/TextAppearance.Tagmoa.Body"
                        android:textColor="@color/priority_chip_text"
                        android:fontFamily="@font/paperlogy_4regular"
                        app:fontFamily="@font/paperlogy_4regular" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveSubTask"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="@string/action_save"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#2563FF"
            app:cornerRadius="26dp" />

    </LinearLayout>
</ScrollView>
