<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAddEditSubTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_dialog_round"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="@string/title_edit_sub_task"
            android:textAppearance="@style/TextAppearance.Tagmoa.Headline" />

        <EditText
            android:id="@+id/editSubTaskContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:hint="@string/hint_subtask_content"
            android:inputType="textCapSentences" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_main_task"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <Spinner
            android:id="@+id/spinnerMainTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_period"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_no_date"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskDateRange"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_date_range"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_start_time"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_time_placeholder"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskStartTime"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_time"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_subtask_end_time"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <TextView
            android:id="@+id/textSubTaskEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_time_placeholder"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectSubTaskEndTime"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_time"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_subtask_alarm"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSubTaskAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSubTaskAlarmOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_alarm_offset"
                android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

            <Spinner
                android:id="@+id/spinnerSubTaskAlarmOffset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/label_subtask_alarm_hint"
                android:textAppearance="@style/TextAppearance.Tagmoa.Caption" />
        </LinearLayout>

        <!-- 중요도는 기본값(낮음)만 유지하고 화면에서는 숨김 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_priority"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spinnerPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveSubTask"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="@string/action_save"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#2563FF"
            app:cornerRadius="26dp" />

    </LinearLayout>
</ScrollView>
