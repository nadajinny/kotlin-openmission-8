<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="6dp"
    android:paddingVertical="6dp">

    <LinearLayout
        android:id="@+id/layoutMainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp">

        <CheckBox
            android:id="@+id/checkboxScheduleComplete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/bg_circle_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/textScheduleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/label_no_title"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
            android:textColor="@color/calendar_text_primary"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buttonScheduleMore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_light"
            android:contentDescription="@string/desc_open_task_menu"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert_24"
            android:tint="@color/calendar_text_muted" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutScheduleSubTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="36dp"
        android:paddingBottom="6dp"
        android:visibility="gone" />

</LinearLayout>
