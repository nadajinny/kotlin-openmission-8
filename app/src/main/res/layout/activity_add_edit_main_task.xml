<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAddEditMainTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_dialog_round"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_edit_main_task"
            android:textAppearance="@style/TextAppearance.Tagmoa.Headline"
            android:paddingBottom="12dp" />

        <EditText
            android:id="@+id/editTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_task_title"
            android:inputType="textCapSentences" />

        <EditText
            android:id="@+id/editTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_box"
            android:gravity="top"
            android:hint="@string/hint_task_description"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <TextView
            android:id="@+id/textTaskDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_no_date"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectDateRange"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_date_range"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_main_color"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

        <Spinner
            android:id="@+id/spinnerTaskColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />
        -->

        <TextView
            android:id="@+id/textSelectedTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_no_tags"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectTags"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="@string/action_select_tags"
            android:textAllCaps="false"
            android:textColor="#222831"
            app:backgroundTint="#F1F3F6"
            app:cornerRadius="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_main_task_alarm"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMainTaskAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/textMainTaskAlarmHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/label_main_task_alarm_hint"
            android:textAppearance="@style/TextAppearance.Tagmoa.Caption" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveTask"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="@string/action_save"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#2563FF"
            app:cornerRadius="26dp" />

    </LinearLayout>
</ScrollView>
