<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@drawable/bg_subtask_chip"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp">

    <CheckBox
        android:id="@+id/checkboxSubTaskComplete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@drawable/bg_circle_checkbox_small"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSubTaskContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body" />

        <TextView
            android:id="@+id/textSubTaskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.Caption"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/buttonSubTaskMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/desc_open_subtask_menu"
        android:padding="4dp"
        android:src="@drawable/ic_more_vert_24"
        android:tint="@android:color/darker_gray" />

</LinearLayout>
