<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_fog_light">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHomeBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingHorizontal="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:title="@string/home_background_settings_title"
        app:titleTextColor="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/backgroundSettingsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarHomeBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textBackgroundDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_background_settings_description"
                android:textAppearance="@style/TextAppearance.Tagmoa.BodySecondary"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_background_preview_label"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHomePreview"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageBackgroundPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_home_preview_placeholder" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="24dp">

                        <TextView
                            android:id="@+id/textPreviewDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/home_background_preview_date_sample"
                            android:textAppearance="@style/TextAppearance.Tagmoa.Display"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:shadowColor="@color/white_50"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="8" />

                        <TextView
                            android:id="@+id/textPreviewHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/bg_panel_soft"
                            android:text="@string/home_background_preview_hint"
                            android:textAppearance="@style/TextAppearance.Tagmoa.Caption"
                            android:textColor="@color/gray_600" />
                    </LinearLayout>
                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/layoutImageActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="2"
                android:paddingBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUploadBackground"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/home_background_action_upload" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUseDefaultBackground"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/home_background_action_reset" />
            </LinearLayout>

            <TextView
                android:id="@+id/textDateColorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_background_date_color_label"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
                android:textStyle="bold"
                android:paddingBottom="12dp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/groupDateColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDateColorDark"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/home_background_color_dark" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDateColorLight"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/home_background_color_light" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonApplyBackground"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_background_apply" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
