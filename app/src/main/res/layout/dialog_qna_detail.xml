<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textQnaDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textQnaDetailMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.BodySecondary"
            android:textColor="@color/gray_600" />

        <TextView
            android:id="@+id/textQnaDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textQnaCommentsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/qna_comments_title"
            android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/containerQnaComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/textQnaNoComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/qna_comments_empty"
            android:textAppearance="@style/TextAppearance.Tagmoa.BodySecondary"
            android:textColor="@color/gray_600" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutQnaCommentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputQnaComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/qna_field_content_hint"
                android:inputType="textMultiLine"
                android:minLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textQnaCommentRestriction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/qna_comments_only_owner"
            android:textAppearance="@style/TextAppearance.Tagmoa.Caption"
            android:textColor="@color/gray_600"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
