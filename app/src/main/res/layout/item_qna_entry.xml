<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/color_aad6eb"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textQnaTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Tagmoa.Subtitle"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textQnaVisibilityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_subtask_chip"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textAppearance="@style/TextAppearance.Tagmoa.Caption"
                android:textColor="@color/brand_primary"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textQnaMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.BodySecondary"
            android:textColor="@color/gray_600" />

        <TextView
            android:id="@+id/textQnaContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.Body"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textQnaCommentCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.Tagmoa.Caption"
            android:textColor="@color/gray_600" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
