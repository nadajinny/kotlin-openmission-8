<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutMainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="?attr/selectableItemBackground">

        <CheckBox
            android:id="@+id/checkboxMainComplete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/bg_circle_checkbox" />

        <TextView
            android:id="@+id/textTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/buttonTaskMore"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert_24"
            android:tint="@color/gray_500"
            android:contentDescription="@string/desc_open_task_menu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSubTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="56dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_200" />

</LinearLayout>
