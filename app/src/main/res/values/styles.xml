<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_text_muted</item>
    </style>

    <style name="CalendarWidgetHeader" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/calendar_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TagMoa.DialogBase" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TagMoa.AddEditTaskDialog" parent="@style/Theme.TagMoa.DialogBase" />
    <style name="Theme.TagMoa.AddEditSubTaskDialog" parent="@style/Theme.TagMoa.DialogBase" />
    <style name="Theme.TagMoa.TagManagementDialog" parent="@style/Theme.TagMoa.DialogBase" />
</resources>
