<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@drawable/calendar_selector_textcolor</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/calendar_text_muted</item>
    </style>

    <style name="CalendarWidgetHeader" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/calendar_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TagMoa.DialogBase" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.TagMoa.AddEditTaskDialog" parent="@style/Theme.TagMoa.DialogBase" />
    <style name="Theme.TagMoa.AddEditSubTaskDialog" parent="@style/Theme.TagMoa.DialogBase" />
    <style name="Theme.TagMoa.TagManagementDialog" parent="@style/Theme.TagMoa.DialogBase" />

    <!-- Typography -->
    <style name="TextAppearance.Tagmoa.Display" parent="@style/TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/paperlogy_8extrabold</item>
        <item name="android:fontFamily">@font/paperlogy_8extrabold</item>
    </style>

    <style name="TextAppearance.Tagmoa.Headline" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/paperlogy_7bold</item>
        <item name="android:fontFamily">@font/paperlogy_7bold</item>
    </style>

    <style name="TextAppearance.Tagmoa.Subtitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/paperlogy_5medium</item>
        <item name="android:fontFamily">@font/paperlogy_5medium</item>
    </style>

    <style name="TextAppearance.Tagmoa.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/paperlogy_4regular</item>
        <item name="android:fontFamily">@font/paperlogy_4regular</item>
    </style>

    <style name="TextAppearance.Tagmoa.Caption" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/paperlogy_3light</item>
        <item name="android:fontFamily">@font/paperlogy_3light</item>
    </style>
</resources>
