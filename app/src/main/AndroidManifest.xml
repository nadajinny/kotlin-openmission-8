<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="tiramisu" />

    <application
        android:name=".controller.TagmoaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tagmoa">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakao${kakao_app_key}" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.AddEditSubTaskActivity"
            android:exported="false"
            android:label="@null"
            android:theme="@style/Theme.TagMoa.AddEditSubTaskDialog" />
        <activity
            android:name=".controller.MainTaskDetailActivity" />
        <activity
            android:name=".controller.AddEditMainTaskActivity"
            android:exported="false"
            android:label="@null"
            android:theme="@style/Theme.TagMoa.AddEditTaskDialog" />
        <activity
            android:name=".controller.TagManagementActivity"
            android:exported="false"
            android:label="@null"
            android:theme="@style/Theme.TagMoa.TagManagementDialog" />

        <activity
            android:name=".controller.HomeBackgroundSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".controller.AlarmManagementActivity"
            android:exported="false" />

        <activity
            android:name=".controller.MainActivity"
            android:exported="false" />

        <activity
            android:name=".controller.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".controller.OnboardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.QnaActivity"
            android:exported="false" />

    </application>

</manifest>
